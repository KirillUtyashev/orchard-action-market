                "--hidden_dim", "64",
                "--seed", "42069",
                "--timesteps", "100",
                "--eval_timesteps", "50",
                "--apple_life", "5",
                "--s_target", "0.16",
                "--batch_size", "4",
                "--critic_vision", "1",
                "--actor_vision", "0",
                "--alpha", "0.000275",
                "--num_layers", "4",
                "--skip", "1",
                "--epsilon", "0.1",
                "--env_cls", "OrchardEuclideanRewards"
